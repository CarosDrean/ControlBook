<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AddParent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_auth_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_auth_background"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/iv_back_par"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:tint="#fff"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_auth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginTop="@dimen/margin_auth_title"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Registrar Padre"
                android:textColor="@color/colorTextORIcon"
                android:textSize="@dimen/text_title_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_auth_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_reguler"
                android:text="@string/text_sign_up_subtitle"
                android:textColor="@color/colorTextORIcon"
                android:textSize="@dimen/text_subtitle_size"
                android:layout_below="@+id/tv_auth_title"
                android:layout_alignStart="@+id/tv_auth_title"/>

            <EditText
                android:id="@+id/et_name_par"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginEnd="@dimen/margin_auth"
                android:padding="@dimen/padding_field"
                android:background="@drawable/bg_auth_field"
                android:drawablePadding="@dimen/padding_field"
                android:drawableStart="@drawable/icons8_administrator_24px"
                android:fontFamily="@font/nunito_sans_reguler"
                android:hint="Nombres"
                android:inputType="textCapWords"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size"
                android:textColorHint="@color/colorSecondaryText"
                android:layout_below="@+id/iv_auth_bg"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_lastname_par"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginEnd="@dimen/margin_auth"
                android:background="@drawable/bg_auth_field"
                android:drawableStart="@drawable/icons8_pencil_24px"
                android:drawablePadding="@dimen/padding_field"
                android:fontFamily="@font/nunito_sans_reguler"
                android:hint="Apellidos"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="@dimen/text_body_size"
                android:layout_below="@+id/et_name_par"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_dni_par"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginEnd="@dimen/margin_auth"
                android:background="@drawable/bg_auth_field"
                android:drawableStart="@drawable/icons8_fingerprint_24px"
                android:drawablePadding="@dimen/padding_field"
                android:fontFamily="@font/nunito_sans_reguler"
                android:hint="DNI"
                android:inputType="number"
                android:padding="@dimen/padding_field"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="@dimen/text_body_size"
                android:layout_below="@+id/et_lastname_par"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_user_par"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginEnd="@dimen/margin_auth"
                android:background="@drawable/bg_auth_field"
                android:drawableStart="@drawable/icons8_add_user_24px"
                android:drawablePadding="@dimen/padding_field"
                android:fontFamily="@font/nunito_sans_reguler"
                android:hint="user"
                android:inputType="text"
                android:padding="@dimen/padding_field"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="@dimen/text_body_size"
                android:layout_below="@+id/et_dni_par"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/et_password_par"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginEnd="@dimen/margin_auth"
                android:background="@drawable/bg_auth_field"
                android:drawableStart="@drawable/icons8_key_2_24px"
                android:drawablePadding="@dimen/padding_field"
                android:fontFamily="@font/nunito_sans_reguler"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_field"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="@dimen/text_body_size"
                android:layout_below="@+id/et_user_par"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_privacy_and_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:fontFamily="@font/nunito_sans_reguler"
                android:gravity="center"
                android:text="@string/text_privacy_and_policy"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size"
                android:layout_below="@+id/et_password_par"
                android:layout_centerHorizontal="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_save_parent"
                android:layout_below="@+id/tv_privacy_and_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginBottom="80dp"
                android:layout_marginStart="@dimen/margin_auth"
                android:layout_marginEnd="@dimen/margin_auth"
                android:layout_marginTop="@dimen/margin_privacy_policy"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="23dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="GUARDAR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@android:color/white" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>